<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JokeFragment"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:visibility="gone"/>
    <com.dd.CircularProgressButton
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_centerInParent="true"
        android:textColor="@color/cpb_white"
        app:cpb_textIdle="提交1"
        app:cpb_cornerRadius="35dp"
        android:visibility="gone"/>
    <com.dd.CircularProgressButton
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:textColor="@color/cpb_white"
        app:cpb_textIdle="提交2"
        app:cpb_cornerRadius="35dp"
        android:visibility="gone"/>
    <com.dd.CircularProgressButton
        android:id="@+id/submit"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:textColor="@color/cpb_white"
        app:cpb_textIdle="重新开始"
        app:cpb_cornerRadius="35dp"
        android:visibility="gone"/>
    <com.befiring.haduonews.test.MyAnimView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <Button
        android:id="@+id/restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重新开始"/>
    <com.befiring.haduonews.widget.WuziqiPanel
        android:id="@+id/wuziqi"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>